#!/usr/bin/make -f


script = $(CURDIR)/index.php
rss = $(CURDIR)/rss_php.php
feeds = $(CURDIR)/feeds.conf

DEST1 = $(CURDIR)/debian/cw1-6005-fh5g11/usr/share/cw1-6005-fh5g11
DEST2 = $(CURDIR)/debian/cw1-6005-fh5g11/usr/share/applications

build: build-stamp
build-stamp:
	dh_testdir

	

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	

	dh_clean

install: build clean  $(script) $(rss) $(feeds)
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	mkdir -m 755 -p $(DEST1)
	mkdir -m 755 -p $(DEST2)

	install -m 777 $(script) $(DEST1)
	install -m 666 $(rss) $(DEST1)
	install -m 666 $(feeds) $(DEST1)
	
	

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_installman
	dh_link
	dh_compress
	dh_fixperms

	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb


binary-arch: build install


binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
